
<div class="container-fluid">
  <div class="home-heading text-center row">
    <div class="home-heading-wrapper">
<div class="recipe-row row3">
    <h3 class="text-center">this is a view of all recipe...</h3>
    <% recipe.forEach((recipe) => { %>
      <div class="col-sm-4 home-recipe-box">
        <img src="<%= recipe.image %>">
        <div class="recipe-info-wrapper">
          <a class="title" href="/recipe/<%= recipe._id %>">
            <strong><%= recipe.recipe %></strong>
          </a><br>
          by <span class="light-text"><%= recipe._creator.username %></span><br>
        </div>
    </div>
     <%  }) %>
   </div>
     </div>
   </div>
</div>
